package demo.spring.jdbc.dao;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.jdbc.core.namedparam.MapSqlParameterSource;
import org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate;

import demo.spring.jdbc.dao.model.Book;
import demo.spring.jdbc.utils.DbUtils;

public class BookDaoImpl implements BookDao {

	@Autowired
	JdbcTemplate jdbcTemplate;
	
	@Autowired
	NamedParameterJdbcTemplate namedParameterJdbcTemplate;

	public NamedParameterJdbcTemplate getNamedParameterJdbcTemplate() {
		return namedParameterJdbcTemplate;
	}

	public void setNamedParameterJdbcTemplate(NamedParameterJdbcTemplate namedParameterJdbcTemplate) {
		this.namedParameterJdbcTemplate = namedParameterJdbcTemplate;
	}

	public JdbcTemplate getJdbcTemplate() {
		return jdbcTemplate;
	}

	public void setJdbcTemplate(JdbcTemplate jdbcTemplate) {
		this.jdbcTemplate = jdbcTemplate;
	}

	@Override
	public void createSchema() {
		jdbcTemplate.execute(DbUtils.CREATE_SCHEMA);
	}

	@Override
	public void createTable() {
		jdbcTemplate.execute(DbUtils.CREATE_TABLE);
	}

	@Override
	public int insertBook(Book book) {

		return jdbcTemplate.update(DbUtils.INSERT_BOOK, book.getBookName(), book.getBookPrice(), book.getNoOfCopies(),
				book.getNoOfCopies() > 0, book.getDateOfPublication());
	}

	@Override
	public boolean modifyBook(Book book) {
		MapSqlParameterSource source = new MapSqlParameterSource();
		source.addValue("n", book.getNoOfCopies());
		source.addValue("s", book.getNoOfCopies() > 0);
		source.addValue("id", book.getBookId());
		
	}

	@Override
	public Book getOneBook(int bookId) {
		return jdbcTemplate.queryForObject(DbUtils.GET_BOOK, new BookRowMapper(), bookId);
	}

	@Override
	public Book getOneBook(String bookName) {
		return jdbcTemplate.queryForObject(DbUtils.GET_BOOK_BY_NAME, new BookRowMapper(),bookName);
	}

	@Override
	public List<Book> getAllBooks() {
		return jdbcTemplate.query(DbUtils.GET_ALL_BOOKS, new BookRowMapper());
	}
}
