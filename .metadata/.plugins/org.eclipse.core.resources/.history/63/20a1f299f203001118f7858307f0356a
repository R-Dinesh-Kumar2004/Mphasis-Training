package com.hibernate.HibernateDemo;

import java.math.BigDecimal;
import java.sql.Date;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

import com.hibernate.entities.Address;
import com.hibernate.entities.Employee;
import com.hibernate.utils.HBUtils;

public class Ex01InsertData {
    public static void main( String[] args )
    {
  
        
        Session session = HBUtils.getSessionFactory().openSession();
        
        Transaction transaction = session.beginTransaction();
        
        Address address = new Address("Theni", "Tamil Nadu", "India");
        Employee employee = new Employee("Jai", new BigDecimal(15000), 150, Date.valueOf("2026-01-01"), false, 1, 'A', address);
        
        session.persist(employee);
        
        transaction.commit();
        
        session.close();
        sessionFactory.close();
    }
}