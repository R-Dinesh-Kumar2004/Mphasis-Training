package demo.spring_core.java_config;

import java.util.List;
import java.util.Map;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import demo.spring_core.model.Certificate;
import demo.spring_core.model.Student;

@Configuration
public class JavaConfiguration {
	
	@Bean
	Certificate getCertificate() {
		Certificate c1 = new Certificate(3,"NPTEL",1000);
		return c1;
	}
	
	@Bean
	Student getStudent() {
		Student s1 = new Student();
		s1.setId(102);
		s1.setName("Raj");
		s1.setActivities(List.of("Problem solving", "Games"));
		s1.setSubjects(new String[]{"Maths","Social"});
		s1.setScores(Map.of("Olympiad", 91.0,"Main Exam",95.0));
		
		
		return s1;
	}
}
